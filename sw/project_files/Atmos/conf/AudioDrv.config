/*****************************************************************
 * Config Data
 *****************************************************************/
/* the time (ms) per timeout signal */
#define AUDIO_SRV_TIMEOUT_IN_MS  10

/* measured in ms */
#define AUDIO_ACTIVE_LINE_IN_JACK_SCAN_TIME     1000
#define AUDIO_ACTIVE_MUSIC_DETECT_TIME          2000
#define AUDIO_AMP_TEMP_CHECK_TIME               2000
#define AUDIO_ACTIVE_FIRST_DET_AFTER_PLUGGED_TIME  3000
#define AUDIO_ACTIVE_MUTE_DEBOUNCE_TIME         0 // Note: As mute debounce logic has been implemented in ASE-TK, so no need mute debounce in MCU.

/* Pin usage */
#define  AMP_WAKEUP(x)           GpioDrv_SetBit(&(x),	GPIO_OUT_AMP_POWER) //SDZ: Active LOW
#define  AMP_SHUTDOWN(x)         GpioDrv_ClearBit(&(x),	GPIO_OUT_AMP_POWER)

#if 1
#define  SYSPWR_ENABLE(x)		do{ \
									GpioDrv_SetBit(&(x), GPIO_OUT_PCM3V3_POWER); \
									GpioDrv_SetBit(&(x), GPIO_OUT_PCM9211_POWER); \
									GpioDrv_SetBit(&(x), GPIO_OUT_AMP_POWER); \
									GpioDrv_SetBit(&(x), GPIO_OUT_1V1_POWER); \
								}while(0)
#define  SYSPWR_DISABLE(x)       SYSPWR_ENABLE(x)
#else
#define  SYSPWR_ENABLE(x)        GpioDrv_SetBit(&(x),GPIO_OUT_SYSPWR_ON) //Active HIGH
#define  SYSPWR_DISABLE(x)       GpioDrv_ClearBit(&(x),GPIO_OUT_SYSPWR_ON)
#endif

